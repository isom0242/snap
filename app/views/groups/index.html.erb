<h1>groups</h1>

<table border="1">
<% @groups.each do |group| %>
  <tr>
    <td><%= group.id %></td>
    <td><%= link_to group.name, group_path(group)  %></td>
    <td><%= link_to "[edit]", edit_group_path(group)  %></td>
    <td><%= link_to "[del]", group, method: :delete, data: { confirm: "are you sure?" }  %></td>
  <tr>
<% end %>
</table>

<br />
<%= link_to "[add]", new_group_path %>
